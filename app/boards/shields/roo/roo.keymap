#include <dt-bindings/zmk/mouse.h>

// TAPDANCE
// COMBOS
// MACROS
// MOUSE

/ {
    macros {
        // Back Window
        ZMK_MACRO(M1,
            wait-ms = <30>;
            tap-ms = <40>;
            bindings = 
                <&macro_press &kp LSHIFT>,
                <&macro_tap &kp LALT TAB>,
                <&macro_release &kp LSHIFT>;
        ),
        // Terminal start
        ZMK_MACRO(M2,
            wait-ms = <30>;
            tap-ms = <40>;
            bindings = 
                <&macro_tap &kp LGUI x>,
                <&macro_wait_time 117, >,
                <&macro_tap &kp I>;
    }
}

/ tap_dance {
    compatible = "zmk,tap-dance";
        brightness hold=down taphold=up,
        volume tap=up hold=down dtap = mute taphold=up
        mouse button tap/hold= up dtap/taphold = down,
        exit tap=na hold=altf4

[&kp NO &kp BRID &kp NO &kp BRIU 420], 
[&kp BTN2 &kp BTN2 &kp BTN3&kp BTN3 200], 
[M2 M3 &kp NO &kp NO 200], 

}

